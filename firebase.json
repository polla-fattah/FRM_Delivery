{
    "firestore": {
        "rules": "src/firebase/firestore.rules",
        "indexes": "src/firebase/firestore.indexes.json"
    },
    "hosting": {
        "public": "dist/pwa",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }]
    },
    "storage": {
        "rules": "src/firebase/storage.rules"
    }
}
